<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <TextView
        android:id="@+id/welcom"
        android:layout_width="274dp"
        android:layout_height="88dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-black"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/bannerDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We're so glad you are here"
        android:textAlignment="center"
        android:textColor="#4CC6FF"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcom"

        />

    <Button
        android:id="@+id/addArticle"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:layout_marginTop="140dp"
        android:layout_marginRight="32dp"
        android:backgroundTint="#19A2DF"
        android:text="Add ARTICLE"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="120dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signOut"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="326dp"
        android:layout_height="52dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="300dp"
        android:layout_marginRight="22dp"
        android:backgroundTint="#19A2DF"
        android:text="Log out"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="120dp"
        app:layout_constraintHorizontal_bias="0.693"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lister"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="325dp"
        android:layout_height="54dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="220dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#19A2DF"
        android:text="VIEW ARTICLE"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="40dp"
        app:layout_constraintHorizontal_bias="0.633"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>